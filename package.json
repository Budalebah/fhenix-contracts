  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json ./deployments/localfhenix && pnpm typechain",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "lint": "pnpm lint:sol && pnpm lint:ts && pnpm prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "DOTENV_CONFIG_PATH=./.env.example pnpm typechain",
    "prettier:check": "prettier --check \"**/*.{js,json,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "hardhat": "hardhat",
    "task:gasUsage": "hardhat task:gasUsage",
    "test": "hardhat test --network nitroTestnode",
    "ci-test": "hardhat test --network ci_localfhenix",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "start:localfhenix": "docker rm -f localfhenix && docker run -p 8545:8547 -p 8548:8548 -p 3000:3000 -it --name localfhenix ghcr.io/fhenixprotocol/fhenix-node-dev:v0.0.6-standalone",
    "stop:localfhenix": "docker stop localfhenix && docker rm -f localfhenix",
    "restart:localfhenix": "stop:localfhenix && start:localfhenix",
    "faucet": "node getFromFaucet.js"
  },
  "dependencies": {
    "ganache-cli": "^6.12.2"
  }
}
